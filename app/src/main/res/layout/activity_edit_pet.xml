<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editPetDetailsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_2"
    android:padding="16dp">

    <ListView
        android:id="@+id/listViewPets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:textColor="@color/black"
        android:dividerHeight="1dp"
        android:layout_weight="5"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/petDetailsContainer"
        android:textColor="@color/black"
        android:visibility="gone">

        <EditText
            android:id="@+id/editTextPetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="Pet Name"/>

        <EditText
            android:id="@+id/editTextPetType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="Pet Type"/>

        <EditText
            android:id="@+id/editTextPetSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="Pet Sex"/>

        <EditText
            android:id="@+id/editTextPetAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="Pet Age"/>

        <EditText
            android:id="@+id/editTextPetNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="Pet Note"/>

        <Button
            android:id="@+id/btnUpdatePet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Pet"/>

        <Button
            android:id="@+id/btnDeletePet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Pet"/>
    </LinearLayout>
</LinearLayout>
